extends ./layout.jade
block content
  hr
  div.col-md-4
  div.col-md-4
    h2 Por favor, ingresa tus datos para continuar
    hr
    hr
    form(action="/users", method="POST")
      div.form-group
        label(for="email") Email
        input.form-control#email(type="email" name="email" placeholder=" Email ");
      div.form-group
        label(for="password") Contraseña
        input.form-control#password(type="password" name="password" placeholder=" Contraseña ");
      div.form-group
        label(for="confirmarpassword") Confirma tu Contraseña
        input.form-control#confirmarpassword(type="password" name="confirmarpassword" placeholder=" Confirmar Contraseña ");
        div
          input.btn.btn-info(type="submit" value="Iniciar Sesión")
        hr
  div.col-md-4
